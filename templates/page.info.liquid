    	<div class="dropdown-content">
    		<div name="contact[dropdown_item]" id="dropdown-menu">
                <!-- VALUE -->
                <!-- Each option Value attribute should be set to the inner HTML value --> 
                <option value="item1">Item 1</option>
                <option value="item2">Item 2</option>
                <option value="item3">Item 3</option>
                <option value="item4">Item 4</option>
                <option value="item5">Item 5</option>
      		</div>  
    	</div>
    </div>
    
    <!-- Text Area -->
    <div class="message">
    	<label for="message" class="required">Message</label>
        	<p>Instructions for the message.</p>
      		<textarea name="contact[body]" id="message" required="required"></textarea>
    </div>
    
    <!-- Submit Button -->
    <div class="submit">
      <input type="submit" 
             value="Submit" 
             class="submit-button">
    </div>
    	
