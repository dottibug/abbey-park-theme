  <!-- CUSTOM CONTACT FORM -->
  {% form 'contact' %}
  <div class="custom--form">
  	<!-- Form Title -->
    <h2 class="form-title">Form Title</h2>
    
    <!-- First Name -->
    <div class="first-name">
      	<label for="first-name" class="required">First Name</label>
      	<input type="text" name="contact[first_name]" id="first-name" autocomplete="on" required="required">
    </div>
        
    <!-- Last Name -->
    <div class="last-name">
    	<label for="last-name" class="required">Last Name</label>
    	<input type="text" 
               name="contact[last_name]" 
               id="last-name" 
               autocomplete="on" 
               required="required">
    </div>
      
    <!-- Email -->
    <div class="customer-email">
      	<label for="customer-email" class="required">Email</label>
      	<input type="email" 
               name="contact[email]" 
               id="customer-email" 
               autocomplete="on" 
               required="required">
    </div>
    
    <!-- Order Number -->
    <div class="order-number">
      <label for="order-number" class="required">Order Number</label>
      <input type="text" 
             name="contact[order_number]" 
             id="order-number" 
             required="required">
    </div>
    
    <!-- Radio Selection -->
    <div class="radio-options">
      <label for="radio-options" class="radio-options-title required">Radio Options Title</label>
      
      <!-- Radio Selection 1 -->
      <div class="radio-option-1">
        <!-- NAME -->
			<!-- 1. Change input Name attribute to "contact[relevant_name]" (it should be the same for all radios) -->
			<!-- 2. Give ID & Value attributes a meaningful name (make them the same as each other) -->
      	<input type="radio" 
               name="contact[radio_options]" 
               id="" 
               value="" 
               checked="checked"> 
      	<label for="radio-option-1" class="radio-label">Option 1</label>
      </div>
      
      <!-- Radio Selection 2 -->
      <div class="radio-option-2">
        <!-- NAME -->
			<!-- 1. Change input Name attribute to "contact[relevant_name]" (it should be the same for all radios) -->
			<!-- 2. Give ID & Value attributes a meaningful name (make them the same as each other) -->
      	<input type="radio" 
               name="contact[radio_options]" 
               id="" 
               value=""> 
      	<label for="radio-option-2" class="radio-label">Option 2</label>
      </div> 
    </div>
    
    <!--
    <!-- Dropdown Selection 
    <div class="dropdown-menu">
      <label for="dropdown-menu" class="required">Dropdown Menu Title</label>
      <!-- NAME 
	  <!-- 1. Change select Name attribute to "contact[relevant_name]"
      <select name="contact[dropdown_item]" id="dropdown-menu">
        <!-- VALUE 
        <!-- Each option Value attribute should be set to the inner HTML value  
