  <!-- CUSTOM CONTACT FORM -->
  <div class="custom--form">
    <!-- Form Title -->
    <h2 class="form-title">Form Title</h2>
    
    <!-- First Name -->
    <div class="first-name">
      	<label for="first-name" class="required">First Name</label>
      	<input type="text" name="contact[first_name]" id="first-name" autocomplete="on" required="required">
    </div>
        
    <!-- Last Name -->
    <div class="last-name">
    	<label for="last-name" class="required">Last Name</label>
    	<input type="text" name="contact[last_name]" id="last-name" autocomplete="on" required="required">
    </div>
      
    <!-- Email -->
    <div class="customer-email">
      	<label for="customer-email" class="required">Email</label>
      	<input type="email" name="contact[email]" id="customer-email" autocomplete="on" required="required">
    </div>
    
    <!-- Radio Selection -->
    <div class="radio-options">
      <!-- ADD A CLASS: Add a relevant class name to the radio-options label -->
      <label for="radio-options" class="radio-options-title required">Radio Options Title</label>
      
      <!-- Radio Selection 1 -->
      <div class="option1-radio">
        <!-- RENAME -->
        	<!-- 1. Give Name attribute the same Class value you gave the Radio Options Label
			<!-- 2. Give ID & Value attributes a meaningful name (make them the same as each other) -->
      	<input type="radio" name="" id="" value="" checked="checked"> 
      	<label for="radio-option1" class="radio-label">Option 1</label>
      </div>
      
      <!-- Radio Selection 2 -->
      <div class="option2-radio">
        <!-- RENAME -->
        	<!-- 1. Change name to the same relevant class you added for the Radio Options Title label
			<!-- 2. Give id & value attributes a meaningful name (make them the same as each other) -->
      	<input type="radio" name="radio-options-title" id="" value=""> 
      	<label for="radio-option2" class="radio-label">Option 2</label>
      </div> 
    </div>
    
    <!-- Text Area -->
    <div class="textarea-wrapper">
      <label for="textarea-block" class="required">Text Area</label>
        <p>Instructions for the textarea block.</p>
      	<textarea name="textarea-block" id="textarea-block" required="required"></textarea>
      </div>
    
    <!-- Submit Button -->
    <div class="submit-button-wrapper">
      <input type="submit" value="Submit" class="submit-button">
    </div>
    
    </div>
    
