  <!-- ACCORDION -->
  <div class="main--accordion-info">
    <div class="heading--info-title">
    	<h1 class="heading--info">Returns &amp; Exchanges</h1>
    </div>
    <div class="accordion--menu">
    	<!-- ITEM CONDITION INFO -->
    	<h2>Item Condition</h2>
    	<p>
      		We accept returns and exchanges on all pieces&mdash;including personalized jewelry! All returned or 
      		exchanged items must be in their original unworn condition and include the packaging.
    	</p>
      <!-- US CANADA ORDERS -->
      <div class="container">
        <div class="label">US &amp; Canada Orders</div>
        <hr>
        <div class="content">
          <p>Free returns and exchanges within 30 days of delivery. Note that any original shipping costs 
            (for rush shipping, for example) are nonrefundable and will be deducted from your total refund.</p>
        </div>
      </div>
      <!-- INTERNATIONAL ORDERS -->
      <div class="container">
        <div class="label">International Orders</div>
        <hr>
        <div class="content">
          <p>Returns and exchanges are accepted within 30 days of delivery. Note that any original shipping 
            fees are nonrefundable and will be deducted from your total refund. International customers are 
            responsible for the cost of return shipping (as well as the cost of re-shipping, in the case of 
            an exchange).</p>
        </div>
      </div> 
      
      <!-- RETURNS & EXCHANGES FORM -->
      {% form 'contact' %}
      <div class="return-request-form">
      	<!-- First Name -->
        
      	<div class="first-name">
      		<label for="firstName" class="required">First Name</label>
      		<input type="text" 
                   name="firstName" 
                   id="firstName" 
                   autocomplete="on"
                   required="required">
      </div>
      
      	<!-- Last Name -->
      	<div class="last-name">
      	<label for="lastName" class="required">Last Name</label>
      	<input type="text"
               name="lastName"
               id="lastName"
               autocomplete="on"
               required="required">
      </div>
      
      	<!-- Email -->
      	<div class="customer-email">
      	<label for="customerEmail" class="required">Email</label>
      	<input type="email"
               name="customerEmail"
               id="customerEmail"
               autocomplete="on"
               required="required">
      </div>
      
      	<!-- Order Number -->
      <div class="order-number">
      	<label for="orderNumber" class="required">Order Number</label>
      	<input type="text"
               name="orderNumber"
               id="orderNumber"
               required="required">
      </div>
      
      	<!-- Return Or Exchange -->
      <div class="return-exchange"> 
        <label for="return-exchange" class="required return-type">Type of Return</label>
       
        <div class="return-radio">
      		<input type="radio" 
                   name="returnExchange"
                   id="return" 
                   value="Return" 
                   checked="checked"> 
      		<label for="return" class="radio-label">Return</label>
        </div>
        
        <div class="exchange-radio">
      		<input type="radio"
                   name="returnExchange"
                   id="exchange"
                   value="Exchange">
      		<label for="exchange" class="radio-label">Exchange</label>
        </div>
      </div>
      
      	<!-- Message -->
      <div class="message">
      	<label>Message</label>
      	<textarea name="message"
                  id="message"></textarea>
      </div>
      
      	<!-- Submit Button -->
      <div class="submit-button">
      	<input type="submit"
               value="Submit"
               class="submit-form-button">
      </div>
      </div>
      
      {% endform %}
      
