      <!-- RETURNS & EXCHANGES FORM -->
      {% form 'contact' %}
      <div class="return-request-form custom--form">
        <!-- Form Title -->
        <h2 class="form-title">Start Your Return or Exchange</h2>
        
      	<!-- First Name -->
      	<div class="first-name">
      		<label for="first-name" class="required">First Name</label>
      		<input type="text" 
                   name="contact[first_name]" 
                   id="first-name" 
                   autocomplete="on"
                   required="required">
      	</div>
        
      	<!-- Last Name -->
      	<div class="last-name">
      	<label for="last-name" class="required">Last Name</label>
      	<input type="text"
               name="contact[last_name]"
               id="last-name"
               autocomplete="on"
               required="required">
      </div>
      
      	<!-- Email -->
      	<div class="customer-email">
      	<label for="customer-email" class="required">Email</label>
      	<input type="email"
               name="contact[email]"
               id="customer-email"
               autocomplete="on"
               required="required">
      </div>
      
      	<!-- Order Number -->
      <div class="order-number">
      	<label for="order-number" class="required">Order Number</label>
      	<input type="text"
               name="contact[order_number]"
               id="order-number"
               required="required">
      </div>
      
      	<!-- Return Or Exchange -->
      <div class="return-exchange radio-options"> 
        <label for="radio-options" class="radio-options-title returnExchange required">Type of Return</label>
       
        <div class="return-radio option1-radio">
      		<input type="radio" 
                   name="returnExchange"
                   id="return" 
                   value="Return" 
                   checked="checked"> 
      		<label for="return" class="radio-label">Return</label>
        </div>
        
        <div class="exchange-radio option2-radio">
      		<input type="radio"
                   name="returnExchange"
                   id="exchange"
                   value="Exchange">
      		<label for="exchange" class="radio-label">Exchange</label>
        </div>
      </div>
      
      	<!-- Message -->
      <div class="message">
      	<label for="message" class="required">Message</label>
        <p>
          Let us know why you want to return or exchange an item.
        </p>
      	<textarea name="contact[body]"
                  id="message"
                  required="required"></textarea>
      </div>
      
      	<!-- Submit Button -->
      <div class="submit-button-wrapper">
      	<input type="submit"
               value="Submit"
               class="submit-button">
      </div>
      </div>
      
      {% endform %}
      
