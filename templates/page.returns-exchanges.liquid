{% style %}

.return-request-form {
	display: grid;
	grid-template-areas:
		"first"
		"last"
		"email"
		"order"
		"radio"
		"message"
		"submit";	
	row-gap: 20px;
	margin-top: 30px;
}

.return-request-form label:not(.radio-label) {
	display: block;
	font-family: 'Assistant', sans-serif;
	font-size: 1.25rem;
	text-transform: uppercase;
	font-weight: 500;
	margin-bottom: 4px;
	color: #666;
	line-height: 2rem;
}

.return-request-form label.required:after {
	content: " *";
	font-size: 2rem;
	vertical-align: middle;
	color: #cc9a9b;
}

.radio-label {
	font-family: 'Assistant', sans-serif;
	font-size: 1.45rem;
}

.first-name {
	grid-area: first;
}

.last-name {
	grid-area: last;
}

form input[type=text], form input[type=email], form textarea {
	width: 400px;
    border-top: 1px solid rgba(47, 79, 79, 0.15);
    border-left: 1px solid rgba(47, 79, 79, 0.15);
    border-right: 1px solid rgba(47, 79, 79, 0.15);
    border-bottom: 2px solid rgba(47, 79, 79, 0.15);
    box-sizing: border-box;
    padding: 9px 12px;
	font-size: 1.45rem;
	font-family: 'Assistant', sans-serif;
} 

form input[type=text]:focus, form input[type=email]:focus, form textarea:focus {
	outline: none;
	box-shadow: 1px 3px 6px rgb(51 51 51 / 10%);
	border-bottom: 2px solid rgba(47, 79, 79, 0.5);
	transition: 0.3s ease-in;	
}

.customer-email {
	grid-area: email;
}

.order-number {
	grid-area: order;
}

.return-exchange {
	grid-area: radio;
	display: grid;
	grid-template-areas: 
		"label"
		"return"
		"exchange";
}

.return-type {
	grid-area: label;
}

.return-radio {
	grid-area: return;
}

.exchange-radio {
	grid-area: exchange;
}

.message {
	grid-area: message;
}

.submit-button {
	grid-area: submit;
}

.submit-form-button {
  	color: rgba(47, 79, 79, 0.8);
  	font-weight: 600;
  	font-size: 1.3rem;
  	text-decoration: none;
  	text-transform: uppercase;
  	box-sizing: border-box;
	background-color: transparent;
  	border: 1px solid;
  	border-color: rgba(47, 79, 79, 0.8);
  	padding: 12px 20px;
    letter-spacing: inherit;
	margin-top: 10px;
    margin-bottom: 30px;
}

.submit-form-button:hover {
  	background-color: rgba(47, 79, 79, 0.8);
  	border-color: transparent;
  	color: #fff;
}

{% endstyle %}