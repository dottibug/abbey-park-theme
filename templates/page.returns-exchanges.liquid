{% style %}

.custom--form {
	display: grid;
	grid-template-areas:
		"title"
		"first"
		"last"
		"email"
		"order"
		"radio"
		"textarea-block"
		"submit";	
	row-gap: 20px;
	margin-top: 30px;	
}

.order-number {
	grid-area: order;
}


.return-tables {
	display: grid;
	grid-template-areas:
		"table1 table2";
	column-gap: 30px;
}

.table-1 {
	grid-area: table1;
	display: grid;
	grid-template-areas:
		"location"
		"time-limit";
	box-shadow: 1px 3px 6px rgb(51 51 51 / 10%);
	margin-bottom: 20px;
  	height: fit-content;
}

.table-2 {
	grid-area: table2;
	display: grid;
	grid-template-areas:
		"location"
		"time-limit";
	box-shadow: 1px 3px 6px rgb(51 51 51 / 10%);
	margin-bottom: 20px;
  	height: fit-content;
}

.table-heading {
	grid-area: location;
	background-color: rgba(47, 79, 79, 0.5);
}

.table-heading h3 {
	font-family: Assistant, sans-serif; 
	color: white;
	padding: 4px 10px;
	text-transform: uppercase;
	font-weight: 500;
	font-size: 1.45rem;
	letter-spacing: .15rem;
	margin-top: 5px;
	margin-bottom: 5px;
}

.return-times {
	grid-area: time-limit;
	background-color: #ffffff;
	padding: 12px 10px 8px;
	grid-area: time-limit
	display: grid;
	grid-template-areas:
		"subtitle"
		"days";
}

.return-times .time-limit-heading {
	grid-area: subtitle;
	text-transform: uppercase;
	font-size: 1rem;
	letter-spacing: 0.15rem; 
	font-family: Assistant, sans-serif;
}

.return-times .time-limit {
	grid-area: days;
	font-size: 2rem;
	font-weight: 400;
	color: #666666;
}


.shipping-tables {
	display: grid;
	grid-template-areas: 
		"table1 table2";
	justify-content: left;
	margin-top: 20px;
	column-gap: 30px;
}

.ship-table {
	display: grid;
	grid-template-areas:
		"service"
		"subtitle-estimate"
		"cost";
	width: 300px;
	box-shadow: 1px 3px 6px rgb(51 51 51 / 10%);
	margin-bottom: 20px;
  	height: fit-content;
}

.shipping-type {
	grid-area: service;
	background-color: rgba(47, 79, 79, 0.5);
	color: white;
	padding: 4px 10px;
	text-transform: uppercase;
	font-weight: 400;
	font-size: 1.25rem;
	letter-spacing: .15rem;
}

.delivery-estimate {
	background-color: #ffffff;
	padding: 12px 10px 8px;
	grid-area: subtitle-estimate
	display: grid;
	grid-template-areas:
		"subtitle"
		"estimate";
}

.estimate-subtitle {
	grid-area: subtitle;
	text-transform: uppercase;
	font-size: 1rem;
	letter-spacing: 0.15rem; 
}

.business-days {
	grid-area: estimate;
	font-size: 2rem;
	font-weight: 400;
	color: #666666;
}

.shipping-cost {
	grid-area: cost;
	font-size: 1.2rem;
	font-weight: 400;
	letter-spacing: 0.1rem;
  	color: #666;
	text-transform: capitalize;
	background-color: rgba(47, 79, 79, 0.15);
	padding: 8px 10px;
}

.cost-option {
	display: grid;
	grid-template-areas:
		"order-total shipping-total";
}

.order-total {
	grid-area: order-total;
}

.shipping-total {
	grid-area: shipping-total;
	justify-self: end;
	text-transform: uppercase;
}

.table-1 {
	grid-area: table1;
}

.table-2 {
	grid-area: table2;
}

{% endstyle %}