{% style %}
.shipping-tables {
	display: grid;
	grid-template-areas: 
		"table1 table2";
	justify-content: space-evenly;
}

.ship-table {
	display: grid;
	grid-template-areas:
		"ship-type cost"
		"subtitle ."
		"estimate .";
}

.shipping-type {
	grid-area: ship-type;
	background-color: gray;
	color: white;
	padding: 10px;
	text-transform: uppercase;
	font-weight: 500;
}

.shipping-cost {
	grid-area: cost;
	justify-self: end;
	background-color: gray;
	color: white;
	padding: 10px;
}

.shipping-subtitle {
	grid-area: subtitle;
}

.shipping-estimate {
	grid-area: estimate;
}

.table1 {
	grid-area: table1;
}

.table2 {
	grid-area: table2;
}

{% endstyle %}

<script>
  const accordion = document.getElementsByClassName('container');
  
  for (let i = 0; i < accordion.length; i++) {
    accordion[i].addEventListener('click', function() {
    	this.classList.toggle('active');
    });
  };
</script>