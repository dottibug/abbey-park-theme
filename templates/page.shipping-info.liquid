  </div>
  <div class="main--accordion-info">
    <div class="heading--info-title">
    	<h1 class="heading--info">Shipping &amp; Delivery</h1>
    </div>
    <div class="accordion--menu">
    
      <!-- Canada --> 
      <div class="container">
        <div class="label">Canada</div>
        <hr>
        <div class="content">
          <div class="shipping-info-text">
          	Shipping estimates do not include the time it takes to make your item. 
          	Be sure to add 3 to 5 business days to the times below to reflect that 
          	processing time. All shipping options include tracking.
          </div>
         
          
          <div class="shipping-tables">
            <!-- Table 1 -->
          	<div class="ship-table table-1">
            	<!-- Shipping Type -->
            	<div class="shipping-type">
              		Standard Shipping
            	</div>
            	<!-- Delivery Estimate -->
            	<div class="delivery-estimate">
            		<div class="estimate-subtitle">
              			Estimated Delivery Time
            		</div>
            		<div class="business-days">
              			2-8 Business days
            		</div>
          		</div>
            	<!-- Shipping Cost -->
            	<div class="shipping-cost">
                  	<!-- Option 1 -->
              		<div class="cost-option">
                      <div class="order-total">
                			orders under $150
                      </div>
                      <div class="shipping-total">
                        	$10
                      </div>
              		</div>
                  	<!-- Option 2 -->
              		<div class="cost-option">
                		<div class="order-total">
                			orders over $150
                      	</div>
                      	<div class="shipping-total">
                        	Free
                      	</div>
              		</div>
            	</div> 
          	</div>
            
          <div class="ship-table table-2">
             <!-- Shipping Type -->
            	<div class="shipping-type">
              		Xpresspost
            	</div>
            	<!-- Delivery Estimate -->
            	<div class="delivery-estimate">
            		<div class="estimate-subtitle">
              			Estimated Delivery Time
            		</div>
            		<div class="business-days">
              			1-3 Business days
            		</div>
          		</div>
            	<!-- Shipping Cost -->
            	<div class="shipping-cost">
                  	<!-- Option 1 -->
              		<div class="cost-option">
                      <div class="order-total">
                			orders under $150
                      </div>
                      <div class="shipping-total">
                        	$10
                      </div>
              		</div>
                  	<!-- Option 2 -->
              		<div class="cost-option">
                		<div class="order-total">
                			orders over $150
                      	</div>
                      	<div class="shipping-total">
                        	Free
                      	</div>
              		</div>
            	</div>
          </div>
        </div>   
        
        
        </div>
      </div>
      <!-- United States -->
      <div class="container">
        <div class="label">United States</div>
        <hr>
        <div class="content">Information, charts, photos, text</div>
      </div>
      <!-- International -->
      <div class="container">
        <div class="label">International</div>
        <hr>
        <div class="content">Information, charts, photos, text</div>
      </div>
    	
      
    </div>
  </div>
</div>

<script>
  const accordion = document.getElementsByClassName('container');
  
  for (let i = 0; i < accordion.length; i++) {
    accordion[i].addEventListener('click', function() {
    	this.classList.toggle('active');
    });
  };
</script>