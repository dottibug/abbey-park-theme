{%- comment -%} CSS stylesheet {%- endcomment -%}
{{ 'main-product-test.css' | asset_url | stylesheet_tag }}

<div>
    <div>
    {% for image in product.images %}
            {{ image | image_url: width: 300 | img_tag }}
    {% endfor %}
    </div>
    <h2> Title: {{ product.title }} </h2>
    <h3> Price: {{ product.price }} </h3>
    {% for option in product.options %}
        Product Options: {{ option }} <br>
    {% endfor %}

TESTING <br> 
 
{% for product_option in product.options_with_values %}
    {% if product_option.name == 'Material' %}
        <div class="swatch-{{ product_option.name }}"></div>
        <p class="swatch-option-name"> {{ product_option.name }} </p> {%- comment -%} Material {%- endcomment -%}
        <ul>
            {% for value in product_option.values %}
                <li class="material-{{ value }}">  </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if product_option.name == 'Length' %}
        <div class="button-{{ product_option.name }}"></div>
        <p class="button-option-name"> {{ product_option.name }} </p> {%- comment -%} Length {%- endcomment -%}
        <ul>
            {% for value in product_option.values %}
                <li class="length"> {{ value }} </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endfor %}



</div>

