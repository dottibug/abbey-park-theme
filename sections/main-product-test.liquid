        <div class="swatch-{{ product_option.name }}"></div>
        <p class="swatch-option-name"> {{ product_option.name }} </p> {%- comment -%} Material {%- endcomment -%}
        <ul>
            {% for value in product_option.values %}
                <li class="material-{{ value }}">  </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if product_option.name == 'Length' %}
        <div class="button-{{ product_option.name }}"></div>
        <p class="button-option-name"> {{ product_option.name }} </p> {%- comment -%} Length {%- endcomment -%}
        <ul>
            {% for value in product_option.values %}
                <li class="length"> {{ value }} </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endfor %}

